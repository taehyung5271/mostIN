<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Month Navigation Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/month_navigation_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_container"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <!-- Previous Month Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_previous_month"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/surface"
                    app:rippleColor="@color/primary"
                    app:icon="@drawable/ic_arrow_left"
                    app:iconGravity="textStart"
                    app:iconTint="@color/on_surface"
                    android:contentDescription="Previous Month"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <!-- Current Month Display -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_current_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024년 1월"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_primary_container"
                        android:fontFamily="@font/pretendard_bold"/>

                    <TextView
                        android:id="@+id/text_month_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출근 20일 • 완료 18일"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/on_primary_container"
                        android:fontFamily="@font/pretendard_medium"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <!-- Next Month Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next_month"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/surface"
                    app:rippleColor="@color/primary"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="textStart"
                    app:iconTint="@color/on_surface"
                    android:contentDescription="Next Month"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/calendar_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Days of Week Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="일"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/error"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="월"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="화"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="수"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="목"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="금"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="토"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/info"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"/>

                </LinearLayout>

                <!-- Calendar Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendar_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <!-- Compatibility ID for existing code -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_calendar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Monthly Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statistics_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달 출근 통계"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_marginBottom="16dp"/>

                <!-- Statistics Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Days -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 출근일"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_total_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_regular"/>

                    </LinearLayout>

                    <!-- Complete Days -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp"
                        android:layout_marginHorizontal="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정상 출퇴근"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_success_container"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_complete_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/success"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_success_container"
                            android:fontFamily="@font/pretendard_regular"/>

                    </LinearLayout>

                    <!-- Incomplete Days -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stat_card_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미완료"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_warning_container"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_incomplete_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/warning"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_warning_container"
                            android:fontFamily="@font/pretendard_regular"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출근 완료율"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/pretendard_medium"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_attendance_rate"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorColor="@color/success"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        android:progress="82"/>

                    <TextView
                        android:id="@+id/text_attendance_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="82%"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/success"
                        android:fontFamily="@font/pretendard_bold"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>