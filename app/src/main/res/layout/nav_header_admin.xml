<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/admin_gradient_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="bottom"
    android:fitsSystemWindows="true">

    <!-- Admin Badge -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_work_24"
                app:tint="#6B46C1"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMIN"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="#6B46C1"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Admin Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Admin Profile Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/admin_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_24"
                android:padding="20dp"
                android:scaleType="center"
                app:tint="#6B46C1" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Admin Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Admin Name -->
            <TextView
                android:id="@+id/admin_employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Admin Role -->
            <TextView
                android:id="@+id/admin_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시스템 관리자"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@android:color/white"
                android:alpha="0.9" />

            <!-- Status Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온라인"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>