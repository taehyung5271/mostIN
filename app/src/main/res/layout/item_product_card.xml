<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/outline_variant"
    app:strokeWidth="1dp"
    app:checkedIconTint="@color/primary"
    app:rippleColor="@color/primary_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Product Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/on_surface"
                android:fontFamily="@font/pretendard_semibold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="노트북 컴퓨터"/>

            <TextView
                android:id="@+id/text_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/on_surface_variant"
                android:fontFamily="@font/pretendard_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                tools:text="15인치 업무용 노트북"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    tools:text="전자제품"/>

                <TextView
                    android:id="@+id/text_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginStart="8dp"
                    tools:text="₩1,200,000"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <!-- Quantity Controls -->
            <LinearLayout
                android:id="@+id/quantity_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/quantity_background">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/pretendard_semibold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increase"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.TextButton"/>

            </LinearLayout>

            <!-- Add to Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_order"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minHeight="32dp"
                android:text="추가"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>