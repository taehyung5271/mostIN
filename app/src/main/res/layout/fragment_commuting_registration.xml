<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_container"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Current Time and Date -->
                <TextView
                    android:id="@+id/text_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:35"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                    android:textColor="@color/on_primary_container"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/text_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 1월 15일 월요일"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/on_primary_container"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp"/>

                <!-- Work Status -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_work_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무 중"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    app:chipBackgroundColor="@color/tertiary_container"
                    app:chipStrokeColor="@color/tertiary"
                    app:chipStrokeWidth="1dp"
                    app:chipIcon="@drawable/ic_work_24"
                    app:chipIconTint="@color/on_tertiary_container"
                    android:textColor="@color/on_tertiary_container"
                    android:fontFamily="@font/pretendard_semibold"
                    style="@style/Widget.Material3.Chip.Assist"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Map Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/map_card"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Naver Map -->
                <com.naver.maps.map.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- Workplace Info Overlay -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/surface"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location_on_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/commuting_work_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이마트 왕십리점"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/on_surface"
                                    android:fontFamily="@font/pretendard_semibold"/>

                                <TextView
                                    android:id="@+id/distance_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="현재 위치에서 150m"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <!-- Status Indicator -->
                            <View
                                android:id="@+id/status_indicator"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/success"/>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Clock In/Out Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clock_in_out"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="출근하기"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:fontFamily="@font/pretendard_semibold"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/primary"
                app:rippleColor="@color/primary_container"
                app:icon="@drawable/ic_access_time_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="@color/outline_variant"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button"/>

            <!-- Location Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_refresh_location"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/surface_variant"
                app:rippleColor="@color/secondary_container"
                app:icon="@drawable/ic_refresh_24"
                app:iconGravity="textStart"
                app:iconTint="@color/on_surface_variant"
                app:strokeColor="@color/outline_variant"
                app:strokeWidth="1dp"
                android:contentDescription="위치 새로고침"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- Today's Work Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/work_summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 근무 현황"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_marginBottom="16dp"/>

                <!-- Work Time Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Clock In Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출근 시간"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_clock_in_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/outline_variant"/>

                    <!-- Clock Out Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="퇴근 시간"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_clock_out_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/outline_variant"/>

                    <!-- Total Work Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="근무 시간"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_surface_variant"
                            android:fontFamily="@font/pretendard_regular"/>

                        <TextView
                            android:id="@+id/text_work_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5h 35m"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Compatibility elements for existing code -->
        <TextView
            android:id="@+id/recentEntry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/recentDeparture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_clock_in"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>