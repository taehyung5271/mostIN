<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 카드 내부 고정 헤더: 상품관리 제목 + 버튼들 + 상태바 -->
    <LinearLayout
        android:id="@+id/stickyHeaderSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="6dp">

        <!-- Compact Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_shopping_basket_24"
                app:tint="#10B981"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="상품 관리"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Insert Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/insertBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="등록"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#10B981"
                app:strokeColor="#10B981"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add_24"
                app:iconSize="18dp"
                app:iconTint="#10B981"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:rippleColor="#D1FAE5"
                android:paddingHorizontal="12dp"/>

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="편집"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#F59E0B"
                app:strokeColor="#F59E0B"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_edit_24"
                app:iconSize="18dp"
                app:iconTint="#F59E0B"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:rippleColor="#FEF3C7"
                android:paddingHorizontal="12dp"/>

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="삭제"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#EF4444"
                app:strokeColor="#EF4444"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_delete_24"
                app:iconSize="18dp"
                app:iconTint="#EF4444"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:rippleColor="#FEE2E2"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

        <!-- 통합된 상태바 (고정 헤더 내부) -->
        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#F8F9FA"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="6dp">
            
            <!-- Left: Mode Status Display -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"/>
                    
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textStyle="bold"/>
            </LinearLayout>
            
            <!-- Right: Fixed Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fixedActionBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="완료"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                app:cornerRadius="20dp"
                app:backgroundTint="#6366F1"
                android:textColor="@android:color/white"/>
                
        </LinearLayout>

    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"/>

    <!-- 카드 내부 스크롤 가능한 상품 목록 영역 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminGoodsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:background="@android:color/white"
        android:nestedScrollingEnabled="true"/>

</LinearLayout>